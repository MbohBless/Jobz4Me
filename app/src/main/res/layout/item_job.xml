<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:padding="5dp"
        android:id="@+id/card">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"
                android:id="@+id/card_img"
                app:cardElevation="0dp"
                android:backgroundTint="#F6F6F6"
                android:padding="5dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_school_24"
                    android:id="@+id/image"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/card_img"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="SampleTitle"
                    android:layout_marginLeft="-5dp"
                    android:textColor="@color/black"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/title"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/category"
                    android:text="this will concern the category"
                    android:textSize="12sp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="these are some of the required for an individual to get this job"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:ellipsize="marquee"
                    android:id="@+id/qualifications"
                    android:singleLine="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:id="@+id/description"
                    android:text="@string/lorem"
                    android:paddingHorizontal="5dp"
                    />
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>
